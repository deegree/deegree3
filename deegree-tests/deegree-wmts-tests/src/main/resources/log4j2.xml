<?xml version="1.0" encoding="utf-8"?>
<Configuration>
  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout pattern="[%d{HH:mm:ss}] %5p: [%c{1}] %m%n" />
    </Console>
  </Appenders>
  <Loggers>
    <AsyncLogger name="org.deegree.workspace" level="trace" additivity="false" />
    <AsyncLogger name="org.deegree" level="INFO" additivity="false" />
    <AsyncLogger name="org.reflections" level="FATAL" additivity="false" />
    <AsyncLogger name="org.deegree.tile" level="trace" additivity="false" />
    <AsyncRoot level="ERROR">
      <AppenderRef ref="stdout" />
    </AsyncRoot>
  </Loggers>
</Configuration>
