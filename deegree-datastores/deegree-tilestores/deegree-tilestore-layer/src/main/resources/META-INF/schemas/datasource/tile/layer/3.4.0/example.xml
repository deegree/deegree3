<?xml version="1.0"?>
<LayerTileStore xmlns="http://www.deegree.org/datasource/tile/layer" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.deegree.org/datasource/tile/layer layer.xsd"
  configVersion="3.4.0">

  <TileDataSet>
    <!-- [0..1]: the identifier for the tile data set. Default is the base name of the GeoTIFF file -->
    <Identifier>test</Identifier>
    <!-- [1]: if of the used tile matrix set. Note that the GeoTIFF file may contain only a part of the tiles, the only requirement 
      is that the tile edges fit smoothly into the tile matrix set. -->
    <TileMatrixSetId>utah</TileMatrixSetId>
    <!-- [1]: the actual GeoTIFF file -->
    <LayerStoreId>osm</LayerStoreId>
    <!-- [0..1]: the mime type of the desired image output format. Default is image/png -->
    <LayerName>osm</LayerName>
  </TileDataSet>

</LayerTileStore>
