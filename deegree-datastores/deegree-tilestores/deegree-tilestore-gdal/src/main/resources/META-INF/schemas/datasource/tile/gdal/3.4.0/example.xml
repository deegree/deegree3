<?xml version="1.0"?>
<GDALTileStore xmlns="http://www.deegree.org/datasource/tile/gdal" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.deegree.org/datasource/tile/gdal gdal.xsd"
  configVersion="3.4.0">

  <TileDataSet>
    <!-- [0..1]: the identifier for the tile data set. Default is the base name of the raster file -->
    <Identifier>test</Identifier>
    <!-- [1]: id of the used tile matrix set. Note that the raster file may contain only a part of the tiles, the only requirement 
      is that the tile edges fit smoothly into the tile matrix set. -->
    <TileMatrixSetId>utah</TileMatrixSetId>
    <!-- [1]: the actual raster file (must be supported by GDAL) -->
    <File>../../data/test.tif</File>
    <!-- [0..1]: the mime type of the desired image output format. Default is image/png -->
    <ImageFormat>image/png</ImageFormat>
  </TileDataSet>

  <TileDataSet>
    <!-- [0..1]: the identifier for the tile data set. Default is the base name of the raster file -->
    <Identifier>test2</Identifier>
    <!-- [1]: id of the used tile matrix set. Note that the raster file may contain only a part of the tiles, the only requirement 
      is that the tile edges fit smoothly into the tile matrix set. -->
    <TileMatrixSetId>utah</TileMatrixSetId>
    <!-- [1]: the actual raster file (must be supported by GDAL) -->
    <File>../../data/test2.tif</File>
    <!-- [0..1]: the mime type of the desired image output format. Default is image/png -->
    <ImageFormat>image/png</ImageFormat>
  </TileDataSet>

</GDALTileStore>
