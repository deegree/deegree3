<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/main/resources</directory>
      <outputDirectory>apache-tomcat-${tomcat-version}/bin</outputDirectory>
      <includes>
        <include>*.bat</include>
        <include>*.cmd</include>
        <include>*.sh</include>
      </includes>
      <fileMode>0775</fileMode>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org.apache.tomcat:tomcat:*</include>
      </includes>
      <unpackOptions>
        <includes>
          <include>apache-tomcat-${tomcat-version}/**/*</include>
        </includes>
        <excludes>
          <exclude>apache-tomcat-${tomcat-version}/webapps/ROOT/**/*.*</exclude>
          <exclude>apache-tomcat-${tomcat-version}/webapps/examples/</exclude>
        </excludes>
      </unpackOptions>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <outputDirectory>apache-tomcat-${tomcat-version}/bin/</outputDirectory>
      <includes>
        <include>org.deegree:deegree-javacheck:*</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>apache-tomcat-${tomcat-version}/webapps/ROOT</outputDirectory>
      <includes>
        <include>org.deegree:deegree-webservices:*</include>
      </includes>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>
</assembly>