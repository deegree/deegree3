<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.deegree</groupId>
  <artifactId>deegree-sos-demo</artifactId>
  <packaging>war</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>deegree 3 SOS demo</name>
  <url>http://maven.apache.org</url>
  <parent>
    <groupId>org.deegree</groupId>
    <artifactId>deegree-demos</artifactId>
    <version>3.0-SNAPSHOT</version>
  </parent>
  <repositories>
    <repository>
      <id>deegree-repo</id>
      <url>http://repo.deegree.org/content/groups/public/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-services-console</artifactId>
      <version>3.0-SNAPSHOT</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-sos-webclient</artifactId>
      <version>1.0-SNAPSHOT</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-services-console</artifactId>
      <version>3.0-SNAPSHOT</version>
      <type>zip</type>
      <classifier>webapp-template</classifier>
      <scope>compile</scope>
    </dependency>    
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-tomcat</artifactId>
      <version>3.0-SNAPSHOT</version>
      <type>zip</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.deegree</groupId>
      <artifactId>deegree-sos-webclient</artifactId>
      <version>1.0-SNAPSHOT</version>
      <type>zip</type>
      <classifier>sos-webclient-template</classifier>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.5</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>jfreechart</groupId>
      <artifactId>jfreechart</artifactId>
      <version>1.0.13</version>
    </dependency>
    <dependency>
      <groupId>jfreechart</groupId>
      <artifactId>jcommon</artifactId>
      <version>1.0.16</version>
    </dependency>
  </dependencies>
  <build>
    <finalName>deegree-sos-demo</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <id>unpack-dependencies-zip</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <classifier>webapp-template</classifier>
              <type>zip</type>
              <includeGroupIds>org.deegree</includeGroupIds>
              <includeArtifactIds>deegree-services-console</includeArtifactIds>
              <outputDirectory>src/main/webapp</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>unpack-client-dependencies-zip</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <classifier>sos-webclient-template</classifier>
              <type>zip</type>
              <includeGroupIds>org.deegree</includeGroupIds>
              <includeArtifactIds>deegree-sos-webclient</includeArtifactIds>
              <outputDirectory>src/main/webapp/client</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>package-tomcat</id>
            <phase>package</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <type>zip</type>
              <includeGroupIds>org.deegree</includeGroupIds>
              <includeArtifactIds>deegree-tomcat</includeArtifactIds>
              <outputDirectory>target</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.1.1</version>
        <executions>
          <execution>
            <id>insertwebclientinfo</id>
            <phase>compile</phase>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>org.deegree.client.sos.fileutils.InsertWebclientInfo</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>replaceclientlink</id>
            <phase>compile</phase>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>org.deegree.client.sos.fileutils.ReplaceClientLink</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.5</version>
        <executions>
          <execution>
            <phase>compile</phase>
            <configuration>
              <target>
                <copy file="src/main/webapp/WEB-INF/newweb.xml" tofile="src/main/webapp/WEB-INF/web.xml" />
                <delete file="src/main/webapp/WEB-INF/newweb.xml" />
                <copy file="src/main/webapp/newconsole.xhtml" tofile="src/main/webapp/console.xhtml" />
                <delete file="src/main/webapp/newconsole.xhtml" />
              </target>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2-beta-5</version>
        <configuration>
          <descriptors>
            <descriptor>assembly.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>assemble-tomcat</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
            </configuration>
          </execution>
        </executions>
      </plugin>      
    </plugins>
  </build>
</project>
