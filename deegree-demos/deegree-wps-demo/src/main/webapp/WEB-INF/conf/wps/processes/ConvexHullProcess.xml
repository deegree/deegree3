<?xml version="1.0" encoding="UTF-8"?>
<ProcessDefinition configVersion="0.5.0"
	processVersion="1.0.0" statusSupported="false"
	xmlns="http://www.deegree.org/services/wps" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.deegree.org/services/wps http://schemas.deegree.org/wps/0.5.0/process_definition.xsd">
	<Identifier>ConvexHull</Identifier>
	<JavaClass>org.deegree.wps.jts.ConvexHullProcesslet</JavaClass>
	<Title>Calculating the Convex Hull of a GML geometry.</Title>
	<Abstract>Calculating the the smallest convex Polygon that contains all the points in the Geometry.</Abstract>
	<InputParameters>
		<ComplexInput>
			<Identifier>GMLInput</Identifier>
			<Title>GMLInput</Title>
			<DefaultFormat mimeType="text/xml" encoding="UTF-8" schema="http://schemas.opengis.net/gml/3.1.1/base/gml.xsd" />
		</ComplexInput>				
	</InputParameters>
	<OutputParameters>
		<ComplexOutput>
			<Identifier>ConvexHull</Identifier>
			<Title>ConvexHull</Title>
			<DefaultFormat mimeType="text/xml" encoding="UTF-8" schema="http://schemas.opengis.net/gml/3.1.1/base/gml.xsd" />
		</ComplexOutput>
	</OutputParameters>
</ProcessDefinition>