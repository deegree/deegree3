<SimpleObservationStore xmlns="http://www.deegree.org/datasource/observation/simplesql"
  configVersion="0.5.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.deegree.org/datasource/observation/simplesql http://schemas.deegree.org/datasource/0.5.0/observation/simplesql.xsd">
  <JDBCConnId>utah-climate-db</JDBCConnId>
  <Table>utah_climate_2004</Table>
  <Column type="timestamp" name="obs_time" />
  <Column type="procedureId" name="s_id" />
  <Column type="procedureName" name="s_name" />
  <Option name="db_timezone" value="GMT" />
  <Property href="urn:ogc:def:phenomenon:OGC:precipitation">
    <Column type="property" name="precipitation" />
    <Option name="uom" value="in" />
  </Property>
  <Property href="urn:ogc:def:phenomenon:OGC:snowfall">
    <Column type="property" name="snow_fall" />
    <Option name="uom" value="in" />
  </Property>
  <Property href="urn:ogc:def:phenomenon:OGC:snowdepth">
    <Column type="property" name="snow_depth" />
    <Option name="uom" value="in" />
  </Property>
  <Property href="urn:ogc:def:phenomenon:OGC:temperature_max">
    <Column type="property" name="max_temp" />
    <Option name="uom" value="degF" />
  </Property>
  <Property href="urn:ogc:def:phenomenon:OGC:temperature_min">
    <Column type="property" name="min_temp" />
    <Option name="uom" value="degF" />
  </Property>
  <Property href="urn:ogc:def:phenomenon:OGC:temperature">
    <Column type="property" name="obs_temp" />
    <Option name="uom" value="degF" />
  </Property>
</SimpleObservationStore>
